    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File with Directory",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceRoot}"
            },
            "xdebugSettings": {
                "max_data": -1
            },
            "envFile": "${workspaceFolder}/.env",
            "env": {},
            "args": [
                "--input",
                "data/mijn_words_part.txt",
            ]
        },
    ]
}